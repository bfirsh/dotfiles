{
  "$schema": "https://opencode.ai/config.json",
  "agent": {
    "build": {
      "permission": {
        "*": "ask",
        "read": {
          "*": "allow",
          "*.env": "deny",
          "*.env.*": "deny",
          "*.env.example": "allow"
        },
        "glob": "allow",
        "grep": "allow",
        "list": "allow",
        "todoread": "allow",
        "todowrite": "allow",
        "task": "allow",
        "skill": "allow",
        "lsp": "allow",
        "webfetch": "allow",
        "question": "allow",
        "bash": {
          "*": "ask",
          "git status *": "allow",
          "git status": "allow",
          "git log *": "allow",
          "git log": "allow",
          "git diff *": "allow",
          "git diff": "allow",
          "git branch *": "allow",
          "git branch": "allow",
          "git show *": "allow",
          "git remote *": "allow",
          "ls *": "allow",
          "ls": "allow",
          "which *": "allow",
          "cat *": "allow",
          "head *": "allow",
          "tail *": "allow",
          "wc *": "allow",
          "file *": "allow",
          "find *": "allow",
          "rg *": "allow",
          "gh pr view *": "allow",
          "gh issue view *": "allow",
          "gh issue list *": "allow",
          "gh pr list *": "allow",
          "gh api *": "allow"
        },
        "edit": "ask",
        "external_directory": "ask"
      }
    }
  }
}
