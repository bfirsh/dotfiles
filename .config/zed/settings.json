// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "vim": {
    "toggle_relative_line_numbers": true
  },
  "format_on_save": "off",
  "use_system_path_prompts": true,
  "ssh_connections": [
    {
      "host": "demo",
      "args": [],
      "projects": [
        {
          "paths": [
            "/home/ubuntu"
          ]
        },
        {
          "paths": [
            "/home/ubuntu/cog-examples"
          ]
        }
      ]
    }
  ],
  "ui_font_family": ".SystemUIFont",
  "buffer_font_family": "TX-02",
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "icon_theme": {
    "mode": "system",
    "light": "Zed (Default)",
    "dark": "Zed (Default)"
  },
  "vim_mode": true,
  "ui_font_size": 15,
  "buffer_font_size": 13,
  "theme": {
    "mode": "dark",
    "light": "Solarized Light",
    "dark": "Solarized Dark"
  },
  "auto_install_extensions": {
    "astro": true,
    "csv": true,
    "docker-compose": true,
    "dockerfile": true,
    "git-firefly": true,
    "html": true,
    "latex": true,
    "make": true,
    "opencode": true,
    "ruby": true,
    "scss": true,
    "solarized": true,
    "sql": true,
    "terraform": true,
    "toml": true,
    "xml": true,
    "zig": true
  }
}
